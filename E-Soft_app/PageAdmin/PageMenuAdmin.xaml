<Page x:Class="E_Soft_app.PageAdmin.PageMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:E_Soft_app.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenuAdmin">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Добавить сутдента" Height="30" Margin="0,5,0,5" Background="LightSteelBlue"></Button>
            <Button Content="Добавить оценку" Margin="0,5,0,5" Height="30" Background="LightSteelBlue"></Button>
            <Button Content="Список студентов" Margin="0,5,0,5" Height="30" Background="LightSteelBlue"></Button>
            <Button Content="Редактирование оценки" Margin="0,5,0,5" Height="30" Background="LightSteelBlue"></Button>
            <Button Content="Удалить студента" Margin="0,5,0,5" Height="30" Background="LightSteelBlue"></Button>
            <Button x:Name="exit_button" Content="Выход" Margin="0,5,0,5" Height="30" Background="LightSteelBlue" Click="exit_button_Click"></Button>

        </StackPanel>
    </Grid>
</Page>
